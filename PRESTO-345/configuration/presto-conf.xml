<configuration supports_adding_forbidden="true">
    <property>
        <name>presto_base_dir</name>
        <value>/usr/hdp/3.0.1.0-187/presto</value>
        <display-name>presto install path</display-name>
        <description>presto 安装路径</description>
    </property>

    <property>
        <name>presto_coordinator_ip</name>
        <value></value>
        <display-name>presto master ip</display-name>
        <description>presto master ip address</description>
    </property>

    <property>
        <name>presto_group</name>
        <value>hadoop</value>
        <display-name>presto Group</display-name>
        <description>presto 组名</description>
    </property>

    <property>
        <name>presto_user</name>
        <value>presto</value>
        <display-name>presto user</display-name>
        <description>presto 用户名</description>
    </property>

    <property>
        <name>presto_root</name>
        <value>root</value>
        <display-name>presto root</display-name>
        <description>root 用户名</description>
    </property>

    <property>
        <name>presto.pid.dir</name>
        <value>/var/run/presto</value>
        <display-name>Presto Pid Directory</display-name>
        <description>Presto pid file directory.</description>
    </property>

    <property>
        <name>presto.path.logs</name>
        <value>/var/log/presto</value>
        <display-name>Path Log</display-name>
        <description>Path to directory where to store the logs.</description>
    </property>

    <property>
        <name>node-scheduler.include-coordinator</name>
        <value>true</value>
        <display-name>weather include coor as worker</display-name>
        <description>weather include coor as worker</description>
    </property>

    <property>
        <name>http-server.http.port</name>
        <value>30088</value>
        <display-name>presto http port</display-name>
        <description>presto http port</description>
    </property>

    <property>
        <name>query.max-memory</name>
        <value>5GB</value>
        <display-name> query max memory </display-name>
        <description> query max memory </description>
    </property>

    <property>
        <name>query.max-memory-per-node</name>
        <value>1GB</value>
        <display-name> query max memory per node</display-name>
        <description> query max memory per node </description>
    </property>

    <property>
        <name>query.max-total-memory-per-node</name>
        <value>2GB</value>
        <display-name> query max total memory per node</display-name>
        <description> query max total memory per node </description>
    </property>

    <property>
        <name>discovery-server.enabled</name>
        <value>true</value>
        <display-name> discovery server enabled</display-name>
        <description> discovery server enabled </description>
    </property>

<!--     <property>
        <name>presto_source</name>
        <value>/usr/hdp/3.0.1.0-187/presto/presto-server-345/jdk11</value>
        <display-name>presto jdk source</display-name>
        <description>presto jdk</description>
    </property> -->

    <property>
        <name>presto_destination</name>
        <value>/usr/hdp/3.0.1.0-187/presto/presto-server-345/jdk11</value>
        <display-name>presto jdk dest</display-name>
        <description>presto jdk dest</description>
    </property>

    <property>
        <name>custom_properties</name>
        <value>
# This is the place for your custom properties.
# e.g.
# your_key: your_value
        </value>
        <display-name>Custom properties</display-name>
        <description>The place for your custom properties</description>
        <value-attributes>
            <type>content</type>
        </value-attributes>
    </property>


</configuration>